<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>pdi-xml-input-plugin</id>
  <formats>
    <format>zip</format>
  </formats>
  <baseDirectory>pdi-xml-input-plugin</baseDirectory>
  <files>
    <file>
      <source>${project.basedir}/src/main/resources/version.xml</source>
      <outputDirectory>.</outputDirectory>
      <filtered>true</filtered>
    </file>
    <file>
      <source>${project.basedir}/src/main/resources/XIN.svg</source>
      <outputDirectory>.</outputDirectory>
      <filtered>true</filtered>
    </file>
  </files>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/src/main/resources/samples</directory>
      <outputDirectory>samples</outputDirectory>
    </fileSet>
    <fileSet>
      <outputDirectory>lib</outputDirectory>
      <excludes>
        <exclude>*/**</exclude>
      </excludes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <includes>
        <include>org.pentaho.di.plugins:pdi-xml-input-plugin-core:jar</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
